package battle{		import flash.display.MovieClip;	import flash.events.*;		//Displays the battle box for party members		public class BattleDisplay extends MovieClip {		var _root;MovieClip;		var info:FighterInfo;		var cond:String;		public function BattleDisplay(i:FighterInfo){			info = i;			condDisp.gotoAndStop("normal");						addEventListener(Event.ADDED, startClass);			addEventListener(Event.REMOVED, endClass);		}				//Connects to main program		public function startClass(event:Event):void{			_root = MovieClip(root);						addEventListener(Event.ENTER_FRAME, updateBox);		}				//Properly destroys instance		public function endClass(event:Event):void{			removeEventListener(Event.ADDED, startClass);			removeEventListener(Event.REMOVED, endClass);		}				//Updates box info		public function updateBox(event:Event):void{						//Updates text			this.nameBox.text = info.fighterName;			this.HPBox.text = "HP:" + info.currHP + "/" + info.maxHP;			this.SPBox.text = "SP:" + info.currSP + "/" + info.maxSP;						//Updates bar			this.HPBar.scaleX = info.currHP / info.maxHP;			this.SPBar.scaleX = info.currSP / info.maxSP;		}				public function setCond(s:String):void{			cond = s;			condDisp.gotoAndStop(cond);		}	}	}