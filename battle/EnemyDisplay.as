package battle{	import flash.display.MovieClip;	import flash.events.*;		//Graphical representation of enemy		public class EnemyDisplay extends MovieClip{		var _root:MovieClip;		var enemyInfo:FighterInfo;		var playedDeath:Boolean = false;		public function EnemyDisplay(eI:FighterInfo) {			enemyInfo = eI;						addEventListener(Event.ADDED, startClass);			addEventListener(Event.REMOVED, endClass);		}				//Functions to add and remove class		public function startClass(event:Event):void{			_root = MovieClip(root);			enemyPic.gotoAndStop(enemyInfo.getName());						addEventListener(Event.ENTER_FRAME, updateDisplay);		}		public function endClass(event:Event):void{			//trace(enemyInfo.getName() + " removed");		}		//Plays when enemy takes damage		public function updateDisplay(event:Event):void{						//If taking damage and not dead			if(enemyInfo.isTakingDamage){				enemyInfo.isTakingDamage = false;				this.dmgTxt.text = "" + enemyInfo.damageTaken;								this.gotoAndPlay("takeDamage");							}			//If dead			if(enemyInfo.isDead && enemyInfo.canPlayDeath && !playedDeath){								playedDeath = true;								this.gotoAndPlay("dead");			}		}	}	}