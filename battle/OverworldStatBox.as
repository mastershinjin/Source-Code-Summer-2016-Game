package battle{	import flash.display.MovieClip;	import flash.events.*;		public class OverworldStatBox extends MovieClip{		var _root:MovieClip;		var fighter:FighterInfo;		public function OverworldStatBox(fI:FighterInfo) {			fighter = fI;						addEventListener(Event.ADDED, added);			addEventListener(Event.REMOVED, removed);		}				public function added(event:Event):void{			_root = MovieClip(root);						addEventListener(Event.ENTER_FRAME, updateStats);		}		public function removed(event:Event):void{						//removeEventListener(Event.ENTER_FRAME, updateStats);			removeEventListener(Event.ADDED, added);			removeEventListener(Event.REMOVED, removed);		}						//Updates stat display		public function updateStats(event:Event):void{						fighter = _root.allyArray[_root.overworldPlayerSelect.getPointerIndex()];						nameBox.text = fighter.getName();						statBox.text = "HP: " + fighter.currHP + "/" + fighter.maxHP + "\n" + 							"SP: " + fighter.currSP + "/" + fighter.maxSP + "\n" + 							"Str: " + (fighter.strength + fighter.armor.getStats()[2] + fighter.weapon.getStats()[2]) + "\n" + 							"Def: " + (fighter.defense + fighter.armor.getStats()[3] + fighter.weapon.getStats()[3]) +  "\n" + 							"Spd: " + (fighter.speed + fighter.armor.getStats()[4] + fighter.weapon.getStats()[4]) + "\n" + 							"Luck: " + (fighter.luck + fighter.armor.getStats()[5] + fighter.weapon.getStats()[5]);										equipBox.text = "Equipment:\n" + fighter.armor.getName() + "\n" + fighter.weapon.getName();		}	}	}