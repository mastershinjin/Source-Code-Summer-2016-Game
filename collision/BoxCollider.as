package collision{	import flash.display.MovieClip;	import flash.events.Event;		public class BoxCollider extends MovieClip{		var _root:MovieClip;				public var hitBox:HitBox = new HitBox();		public var canMoveUp:Boolean = true;		public var canMoveRight:Boolean = true;		public var canMoveDown:Boolean = true;		public var canMoveLeft:Boolean = true;		public function BoxCollider(xPos:int, yPos:int, w:int, h:int) {						this.x = xPos;			this.y = yPos;			this.width = w;			this.height = h;						addEventListener(Event.ADDED, startClass);			addEventListener(Event.REMOVED, remove);		}				//Connects to main program		public function startClass(event:Event){			_root = MovieClip(root);						addEventListener(Event.ENTER_FRAME, checkIfCollide);		}				//Executes when removed		public function remove(event:Event):void{			removeEventListener(Event.ENTER_FRAME, checkIfCollide);		}										//Checks if collided with player		public function checkIfCollide(event:Event){			//Checks wall collision with direction in relation to the player			if(this.hitBox.hitTestObject(_root.player.playerBox)){   				if(_root.compassDir == 1){					canMoveUp = false;				}				else if(_root.compassDir == 2){					canMoveRight = false;				}				else if(_root.compassDir == 3){					canMoveDown = false;				}				else if(_root.compassDir == 4){					canMoveLeft = false;				}			}			else{				canMoveUp = true;				canMoveRight = true;				canMoveDown = true;				canMoveLeft = true;			}					}	}	}